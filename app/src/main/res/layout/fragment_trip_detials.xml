<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detail_main_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/default_home_image"/>

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:layout_below="@id/title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate:"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/detail_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points Reward:"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/detail_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration:"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guide: "
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/detail_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="marvz opo"
                        android:textStyle="italic"
                        android:textColor="#07c"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is a little Description"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_below="@id/txtLoc"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <Button
                    android:id="@+id/detail_book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Book"
                    android:background="@drawable/rounded_button"
                    android:elevation="4dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>